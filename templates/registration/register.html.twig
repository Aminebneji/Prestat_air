{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}


<div class="row my-5">
    <div class="col-12 text-center">
        <h1>Register</h1>
    </div>
</div>

{{ form_start(RegistrationForm) }}

<div class="row mb-3">
    <div class="row mb-3">
        <div class="col-3 offset-3">
            {{ form_row(RegistrationForm.email) }}
        </div>
    </div>
    <div class="col-3 offset-3">
        {{ form_row(RegistrationForm.firstname, {
        'label': 'Prénom'
        }) }}
    </div>
    <div class="col-3">
        {{ form_row(RegistrationForm.name, {
        'label': 'Nom'
        }) }}
    </div>
</div>

<div class="col-3">
    {{ form_row(RegistrationForm.city, {
    label: 'City'
    }) }}
</div>
<div class="col-3">
    {{ form_row(RegistrationForm.region, {
    label: 'Region'
    }) }}
</div>

<div class="row mb-3">
    <div class="col-3 offset-3">
        {{ form_row(RegistrationForm.plainPassword.first, {
        label: 'Mot de passe'
        }) }}
    </div>
    <div class="col-3">
        {{ form_row(RegistrationForm.plainPassword.second, {
        label: 'Confirmation mot de passe'
        }) }}
    </div>
</div>

</div>

<div class="row mb-3">
    <div class="col-6 offset-3">
        {{ form_row(RegistrationForm.agreeTerms, {
        label: 'j\'accepte les CGU'
        }) }}
    </div>
</div>
<div class="row mb-3">
    <textarea class="col-6 offset-3">
        {{ form_row(RegistrationForm.description, {
        label: 'decrivez vous'
        }) }}
    </textarea>
</div>

<div class="row mb-3">
    <div class="col-6 offset-3 mb-5 text-end">
        <button class="btn btn-success">Inscription</button>
    </div>
</div>

{{ form_end(RegistrationForm) }}

</form>

<div class="row text-center mb-5">
    <hr class="col-6 offset-3">
    <div class="col-12">
        <p>Déjà inscrit ? <a href="{{ path('login') }}">Connectez-vous !</a></p>
    </div>
</div>

</div>

{% endblock %}